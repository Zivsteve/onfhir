{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
      "./packages/*/@types"
    ]
  },
  "include": ["./src", "./package.json", "./packages/*/package.json"],
  "exclude": ["./node_modules", "./dist", "./packages/*/dist", "__tests__"]
}
